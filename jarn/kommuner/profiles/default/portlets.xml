<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="jarn.kommuner">

  <!-- frontpage.main â€” managers located in the main (LEFT) column of the
  company board of the frontpage view-->
  <portletmanager
    name="frontpage.main.1"
    type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
    />
  <portletmanager
    name="frontpage.main.2"
    type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
    />
  <portletmanager
    name="frontpage.main.3"
    type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
    />
  <portletmanager
    name="frontpage.main.4"
    type="intranett.theme.browser.interfaces.IFrontpagePortletManagers"
    />

  <portlet
    addview="portlets.LOS"
    title="Tema Portlet"
    description="A portlet which shows the main LOS topics."
    i18n:attributes="title;
                     description">
    <for interface="plone.app.portlets.interfaces.IColumn" />
  </portlet>

  <!-- Hide navigation portlet -->
  <assignment
      manager="plone.leftcolumn"
      category="context"
      key="/"
      type="portlets.Navigation"
      name="navigation"
      visible="False"
      />

  <!-- Assign LOS topics portlet -->
  <assignment
      manager="plone.leftcolumn"
      category="context"
      key="/"
      type="portlets.LOS"
      name="los" />

</portlets>
