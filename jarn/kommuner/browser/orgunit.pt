<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="jarn.kommuner">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">

    <div tal:condition="context/unitlocation">
      <label i18n:translate>Location</label>
      <span tal:content="context/unitlocation">Athens Greece</span>
    </div>

    <div tal:condition="context/contact">
      <label i18n:translate>Contact</label>
      <span tal:content="context/contact">+301239234</span>
    </div>

    <tal:subunits tal:define="units view/subunits" tal:condition="units">
        <label i18n:translate="">Units</label>
        <ul>
          <li tal:repeat="unit units">
            <a href="" tal:attributes="href unit/absolute_url" 
                       tal:content="unit/Title">Dept. of Justice</a>
          </li>
        </ul>
    </tal:subunits>

    <tal:persons tal:define="persons view/persons" tal:condition="persons">
        <label i18n:translate="">Persons</label>
        <ul>
          <li tal:repeat="person persons">
            <a href="" tal:attributes="href person/absolute_url" 
                       tal:content="person/Title">John Doe</a>
          </li>
        </ul>
    </tal:persons>
    </metal:content-core>
</metal:content-core>

</body>
</html>

