<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="jarn.kommuner">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
      <tal:subtopics
        tal:define="subcategories python:context.listFolderContents(contentFilter={'portal_type' :'LOSCategory'})"
        tal:condition="subcategories">
        <h2 class="hiddenStructure">LOS Categories</h2>
        <ul id="subcategories-list">
          <metal:items tal:repeat="subcategory subcategories">
              <li class="photoAlbumEntry"
                  tal:attributes="class python:repeat['subcategory'].number() in [4, 8, 12, 16] and 'photoAlbumEntry clearMe' or 'photoAlbumEntry'">
                  <a tal:attributes="href subcategory/absolute_url;
                                     title subcategory/Description">
                      <span class="photoAlbumEntryWrapper">
                          <img tal:condition="subcategory/getImage|nothing"
                               tal:replace="structure python:subcategory.tag(scale='mini', css_class='newsImage')" />
                      </span>
                      <span class="photoAlbumEntryTitle" tal:content="subcategory/Title">
                          Title
                      </span>
                  </a>
              </li>
          </metal:items>
        </ul>
      </tal:subtopics>
      <div class="image-right">
        <img tal:replace="structure python:context.tag(scale='mini', css_class='newsImage')" />
      </div>
      <metal:field use-macro="python:context.widget('text', mode='view')">
          Body text
      </metal:field>
      <tal:services tal:define="services context/getServices" tal:condition="services">
        <label i18n:translate="">Services</label>
        <ul>
          <li tal:repeat="service services">
            <a tal:content="service/Title"
               tal:attributes="href service/absolute_url;
                               title service/Description"></a>
          </li>
        </ul>
      </tal:services>
    </metal:content-core>
</metal:content-core>

</body>
</html>

