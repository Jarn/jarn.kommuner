<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="jarn.kommuner">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
      <div class="image-right">
      <img tal:replace="structure python:context.tag(scale='mini', css_class='newsImage')"/>
      </div>
      <tal:subtopics
        tal:define="subcategories python:context.listFolderContents(contentFilter={'portal_type' :'LOSCategory'})"
        tal:condition="subcategories">
        <label i18n:translate="">LOS Categories</label>
        <ul tal:repeat="subcategory subcategories">
          <li>
            <a  
              tal:attributes="href subcategory/absolute_url">
              <div tal:condition="context/getImage|nothing">>
                <img tal:replace="structure python:subcategory.tag(scale='mini', css_class='newsImage')"/>
              </div>

              <span tal:content="subcategory/Title">A Subcategory</span>
            </a>
          </li>
        </ul>
      </tal:subtopics>
      <tal:services tal:define="services context/getServices" tal:condition="services">
        <label i18n:translate="">Services</label>
        <ul>
          <li tal:repeat="service services">
            <a tal:content="service/Title"
               tal:attributes="href service/absolute_url;
                               title service/Description"></a>
          </li>
        </ul>
      </tal:services>
    </metal:content-core>
</metal:content-core>

</body>
</html>

